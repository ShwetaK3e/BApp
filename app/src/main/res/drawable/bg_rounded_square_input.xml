<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient android:startColor="@color/colorPrimaryLight"   android:endColor="@color/white"
        android:angle="225"/>


    <padding android:left="1dp"
        android:top="1dp"
        android:right="1dp"

        />

<corners        android:topLeftRadius="7dp" android:topRightRadius="7dp"/>

</shape>
</item>

    <item android:top="-4dp" android:left="-4dp" android:right="-4dp">
       <shape>
           <solid android:color="@android:color/transparent"></solid>
           <stroke android:color="@color/bg_rounded_square_input_line"
               android:width="2dp"></stroke>
           <corners
               android:topLeftRadius="8dp"
               android:topRightRadius="8dp"/>

       </shape>

    </item>


    </layer-list>