<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD YOUR BUSINESS LOCATION"
            android:textSize="15sp"
            android:typeface="serif"
            android:textColor="@color/first_color"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/add_other_pic_text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_grey"
            android:layout_marginTop="5dp"
            />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/new_bloc">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/bg_rounded_square_holder"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="2dp"
                android:id="@+id/map_layout">

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/loc_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/map_scheme"
                    android:orientation="horizontal"
                    android:background="#8888"/>



                    <LinearLayout
                        android:id="@+id/add_loc_from_google"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:background="#66FEE767"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SNAP YOUR LOCATION"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:background="@android:color/transparent"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/ic_map_icon"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"/>
                    </LinearLayout>






                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:padding="2dp"
                    android:background="@color/light_grey"
                    android:id="@+id/loc_edit">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit "
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:paddingLeft="2dp"
                        android:src="@drawable/ic_edit"   />
                </LinearLayout>





            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#88000000"
                android:layout_marginTop="2dp"
                android:id="@+id/separator"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" If this is not your shop location, SKIP "
                    android:gravity="center"
                    android:textColor="@color/light_red"
                    android:textStyle="bold"
                    android:id="@+id/change_loc_guideline"
                    android:padding="6dp"/>








