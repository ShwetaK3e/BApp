<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:padding="10dp"
    android:background="@color/white"
    android:elevation="5dp"
    android:animateLayoutChanges="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/other_header"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/back_other"/>

    </LinearLayout>


        <com.bzyness.bzyness.CustomWidgets.BAppTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTHER DETAILS OF YOUR BZYNESS"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@color/textColorSecondary"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/other_header"
            android:gravity="center"
            android:id="@+id/other_guideline"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_marginTop="5dp"
            android:layout_below="@id/other_guideline"
            android:id="@+id/separator_1"/>


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/separator_1">









    </LinearLayout>


    </RelativeLayout>